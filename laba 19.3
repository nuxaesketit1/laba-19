#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n, max_j = 0, min_j = 0;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M, N > 0, а так же чётные) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0) || (m % 2 == 1) || (n % 2 == 1));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) {
		matrix[i] = new double[n];
	}

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cin >> matrix[i][j];
		}
	}

	for (int i = 0; i < m / 2; i++) {
		for (int j = 0; j < n / 2; j++) {
			swap(matrix[i][j], matrix[m / 2 + i][n / 2 + j]);
		}
	}

	cout << "Результат : " << endl;
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << matrix[i][j] << ends;
		}
		cout << endl;
	}

	cout << endl;
	system("pause");
	return 0;

}
