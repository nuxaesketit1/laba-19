#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n, temp_max_j, temp_min_j;
	double min, max;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M,N > 0) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) {
		matrix[i] = new double[n];
	}

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cin >> matrix[i][j];
		}
	}

	for (int i = 0; i < m; i++) {

		temp_min_j = 0;
		temp_max_j = 0;
		min = matrix[i][0];
		max = matrix[i][0];
		for (int j = 1; j < n; j++) {

			if (matrix[i][j] > max) {
				temp_max_j = j;
				max = matrix[i][j];
			}
			if (matrix[i][j] < min) {
				temp_min_j = j;
				min = matrix[i][j];
			}

		}
		swap(matrix[i][temp_min_j], matrix[i][temp_max_j]);

	}

	cout << "Результат : " << endl;
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << matrix[i][j] << ends;
		}
		cout << endl;
	}

	cout << endl;
	system("pause");
	return 0;

}
